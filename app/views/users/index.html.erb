<% @users.each do |user| %>
  <div class="span4" style="float: left; margin-bottom: 30px">
    <h4>
      <%= user.role.name.capitalize %> <%= user.first_name %> (<%= user.username %>)
    </h4>
    <ul class="list-button">
      <% user_chats(user).each do |chat| %>
        <li class="list-button-item">
          <%= link_to chat_path(chat.id) do %>
          Conversa com <%=chat.contact.role.name %> <%= chat.contact.first_name %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>