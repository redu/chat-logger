                $green1
              </div>
              <div class="color-box color-green2">
                $green2
              </div>
              <div class="color-box color-green3 text-white">
                $green3
              </div>
              <div class="color-box color-green4 text-white">
                $green4
              </div>
            </div>
            <!-- Vermelho. -->
            <div class="color-row">
              <div class="color-box color-red1">
                $red1
              </div>
